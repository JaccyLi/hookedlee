/* pages/index/index.wxss */
.container {
  min-height: 100vh;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  padding: 0;
  padding-bottom: 320rpx;
  box-sizing: border-box;
  position: relative;
}

.header {
  text-align: center;
  padding: 60rpx 40rpx 30rpx;
  margin-bottom: 0;
}

.title {
  display: block;
  font-size: 56rpx;
  font-weight: 600;
  color: #ffffff;
  margin-bottom: 12rpx;
  letter-spacing: 0.5rpx;
}

.subtitle {
  display: block;
  font-size: 26rpx;
  color: rgba(255, 255, 255, 0.85);
  font-weight: 400;
}

.lang-toggle {
  position: fixed;
  top: 60rpx;
  right: 30rpx;
  z-index: 100;
}

.lang-btn {
  background: rgba(255, 255, 255, 0.2);
  color: #ffffff;
  border: 1rpx solid rgba(255, 255, 255, 0.3);
  border-radius: 24rpx;
  font-size: 22rpx;
  font-weight: 500;
  padding: 12rpx 24rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.15);
}

.lang-btn::after {
  border: none;
}

/* Article Styling - Apple Style */
.article-container {
  width: 100%;
  padding: 0 0 40rpx;
}

.article {
  background: #ffffff;
  max-width: 750rpx;
  margin: 0 auto;
  border-radius: 0;
  box-shadow: 0 4rpx 40rpx rgba(0, 0, 0, 0.08);
}

.article-hero-image {
  width: 100%;
  height: 500rpx;
  background-color: #f5f5f7;
  object-fit: cover;
}

.article-content {
  padding: 56rpx 48rpx;
}

.article-meta {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 32rpx;
  flex-wrap: wrap;
  gap: 16rpx;
  position: relative;
  z-index: 10;
}

.article-tag {
  display: inline-block;
  padding: 10rpx 24rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: #ffffff;
  font-size: 22rpx;
  font-weight: 500;
  border-radius: 20rpx;
  letter-spacing: 0.5rpx;
}

.article-source {
  font-size: 24rpx;
  color: #86868b;
  font-weight: 400;
}

.article-title {
  display: block;
  font-size: 52rpx;
  font-weight: 700;
  color: #1d1d1f;
  line-height: 1.2;
  margin-bottom: 32rpx;
  letter-spacing: -0.5rpx;
}

.article-body {
  margin-bottom: 48rpx;
}

/* HTML Element Styling for Apple Design */
.article-body rich-text {
  display: block;
  font-size: 32rpx;
  color: #424245;
  line-height: 1.7;
  font-weight: 400;
}

.article-body rich-text article {
  display: block;
  max-width: 100%;
}

.article-body rich-text h1 {
  font-size: 56rpx;
  font-weight: 700;
  color: #1d1d1f;
  margin: 48rpx 0 24rpx;
  line-height: 1.2;
}

.article-body rich-text h2 {
  font-size: 48rpx;
  font-weight: 600;
  color: #1d1d1f;
  margin: 40rpx 0 20rpx;
  line-height: 1.3;
}

.article-body rich-text h3 {
  font-size: 40rpx;
  font-weight: 500;
  color: #1d1d1f;
  margin: 32rpx 0 16rpx;
  line-height: 1.4;
}

.article-body rich-text p {
  margin-bottom: 32rpx;
  line-height: 1.7;
  color: #424245;
}

.article-body rich-text ul,
.article-body rich-text ol {
  margin: 32rpx 0;
  padding-left: 48rpx;
}

.article-body rich-text li {
  margin-bottom: 16rpx;
  line-height: 1.6;
  color: #424245;
}

.article-body rich-text strong {
  font-weight: 600;
}

.article-body rich-text em {
  font-style: italic;
}

.article-body rich-text blockquote {
  margin: 32rpx 0;
  padding-left: 32rpx;
  border-left: 4rpx solid #d1d1d1f;
  color: #6e6e80;
  font-style: italic;
}

.article-body rich-text hr {
  margin: 48rpx 0;
  border: none;
  border-top: 1rpx solid #e5e5eb;
  height: 1rpx;
}

.article-body rich-text h2 {
  font-size: 44rpx;
  font-weight: 700;
  color: #1d1d1f;
  margin: 48rpx 0 24rpx;
  line-height: 1.3;
}

.article-body rich-text h3 {
  font-size: 36rpx;
  font-weight: 600;
  color: #1d1d1f;
  margin: 40rpx 0 20rpx;
  line-height: 1.4;
}

.article-body rich-text ul,
.article-body rich-text ol {
  margin: 32rpx 0;
  padding-left: 48rpx;
}

.article-body rich-text li {
  margin-bottom: 16rpx;
  line-height: 1.6;
}

.article-body rich-text strong {
  font-weight: 600;
  color: #1d1d1f;
}

.article-body rich-text em {
  font-style: italic;
}

.article-footer {
  margin-top: 48rpx;
  padding-top: 32rpx;
  border-top: 1rpx solid #e5e5ea;
}

.read-more-link {
  display: inline-flex;
  align-items: center;
  justify-content: center;
  padding: 24rpx 48rpx;
  background: #007aff;
  color: #ffffff;
  font-size: 28rpx;
  font-weight: 600;
  border-radius: 12rpx;
  text-decoration: none;
}

.loading-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 80rpx 40rpx;
  min-height: 400rpx;
}

.loading-spinner {
  width: 80rpx;
  height: 80rpx;
  border: 6rpx solid rgba(255, 255, 255, 0.2);
  border-top-color: #ffffff;
  border-radius: 50%;
  animation: spin 0.8s linear infinite;
  margin-bottom: 40rpx;
}

@keyframes spin {
  to {
    transform: rotate(360deg);
  }
}

.loading-info {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 32rpx;
}

.loading-title {
  font-size: 36rpx;
  color: #ffffff;
  font-weight: 600;
  margin-bottom: 16rpx;
}

.loading-step {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.9);
  margin-bottom: 12rpx;
  text-align: center;
}

.loading-detail {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.8);
  margin-bottom: 8rpx;
  text-align: center;
  min-height: 32rpx;
  font-weight: 500;
}

.loading-tip {
  font-size: 22rpx;
  color: rgba(255, 255, 255, 0.6);
  font-style: italic;
}

.joke-btn {
  margin-top: 24rpx;
  padding: 20rpx 40rpx;
  background: rgba(255, 255, 255, 0.2);
  color: #ffffff;
  font-size: 28rpx;
  font-weight: 500;
  border: 2rpx solid rgba(255, 255, 255, 0.4);
  border-radius: 30rpx;
  backdrop-filter: blur(10rpx);
}

.joke-btn::after {
  border: none;
}

.joke-container {
  margin-top: 32rpx;
  padding: 32rpx;
  background: rgba(255, 255, 255, 0.15);
  border-radius: 20rpx;
  max-width: 600rpx;
  text-align: center;
  backdrop-filter: blur(10rpx);
}

.joke-text {
  font-size: 28rpx;
  color: #ffffff;
  line-height: 1.6;
  font-style: italic;
}

.error-container {
  text-align: center;
  padding: 80rpx 40rpx;
  margin: 40rpx 30rpx;
  background: rgba(255, 59, 48, 0.1);
  border-radius: 20rpx;
}

.error-text {
  font-size: 28rpx;
  color: #ff453a;
  font-weight: 500;
  line-height: 1.5;
}

.empty-state {
  text-align: center;
  padding: 120rpx 40rpx 60rpx;
  margin: 40rpx 30rpx;
}

.empty-text {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.9);
  font-weight: 400;
  line-height: 1.6;
}

.button-container {
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  max-width: 750rpx;
  margin: 0 auto;
  padding: 24rpx 30rpx;
  display: flex;
  gap: 20rpx;
  box-sizing: border-box;
  /* No background - floats on gradient */
  box-shadow: 0 -4rpx 20rpx rgba(0, 0, 0, 0.15);
  z-index: 50;
}

.category-input {
  flex: 1;
  height: 100rpx;
  background: rgba(255, 255, 255, 0.9);
  color: #424245;
  font-size: 28rpx;
  font-weight: 400;
  border: none;
  border-radius: 12rpx;
  padding: 0 24rpx;
}

.category-input::placeholder {
  color: rgba(66, 66, 66, 0.5);
}

.back-btn {
  flex: 1;
  height: 100rpx;
  background: rgba(255, 255, 255, 0.15);
  color: #ffffff;
  font-size: 28rpx;
  font-weight: 500;
  border: 1rpx solid rgba(255, 255, 255, 0.3);
  border-radius: 12rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.back-btn::after {
  border: none;
}

.back-btn[disabled] {
  opacity: 0.5;
}

.next-btn {
  flex: 1;
  height: 100rpx;
  background: rgba(255, 255, 255, 0.15);
  color: #ffffff;
  font-size: 28rpx;
  font-weight: 500;
  border: 1rpx solid rgba(255, 255, 255, 0.3);
  border-radius: 12rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.next-btn[disabled] {
  opacity: 0.5;
}

.next-btn::after {
  border: none;
}

.category-input-container {
  flex: 1;
  display: flex;
  align-items: center;
}

.input-area-container {
  position: fixed;
  bottom: 130rpx;
  left: 0;
  width: 100%;
  max-width: 750rpx;
  margin: 0 auto;
  padding: 0 30rpx 16rpx;
  box-sizing: border-box;
  /* No background - floats on gradient */
  z-index: 49;
}

.generate-btn {
  flex: 1;
  height: 100rpx;
  background: #ffffff;
  color: #667eea;
  font-size: 32rpx;
  font-weight: 600;
  border: none;
  border-radius: 12rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.12);
  display: flex;
  align-items: center;
  justify-content: center;
}

.generate-btn[disabled] {
  opacity: 0.6;
}

.generate-btn::after {
  border: none;
}

.cancel-btn {
  flex: 1;
  height: 100rpx;
  background: rgba(255, 59, 48, 0.9);
  color: #ffffff;
  font-size: 28rpx;
  font-weight: 500;
  border: 1rpx solid rgba(255, 255, 255, 0.3);
  border-radius: 12rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.12);
  display: flex;
  align-items: center;
  justify-content: center;
}

.cancel-btn::after {
  border: none;
}

.cancel-btn[disabled] {
  opacity: 0.5;
}

.filter-container {
  width: 100%;
  max-width: 750rpx;
  margin: 0 auto;
  padding: 32rpx 24rpx 16rpx;
  background: rgba(255, 255, 255, 0.1);
  border-radius: 24rpx;
  backdrop-filter: blur(20rpx);
  overflow: hidden;
  box-sizing: border-box;
}

.filter-label {
  display: block;
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.9);
  margin-bottom: 24rpx;
  font-weight: 500;
  text-transform: uppercase;
  letter-spacing: 1rpx;
}

.filter-options {
  display: flex;
  flex-wrap: wrap;
  gap: 8rpx;
  margin-right: -8rpx;
}

.filter-option {
  padding: 12rpx 20rpx;
  background: rgba(255, 255, 255, 0.15);
  color: rgba(255, 255, 255, 0.9);
  font-size: 24rpx;
  font-weight: 400;
  border-radius: 20rpx;
  transition: all 0.2s ease;
  flex-shrink: 0;
  max-width: calc(100% - 8rpx);
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.filter-option.active {
  background: #ffffff;
  color: #667eea;
  font-weight: 600;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.15);
}

.article-paragraphs {
  margin-top: 40rpx;
}

.article-paragraph {
  margin-bottom: 56rpx;
}

.paragraph-image {
  width: 100%;
  height: 500rpx;
  border-radius: 16rpx;
  margin-bottom: 32rpx;
  background-color: #f5f5f7;
  object-fit: cover;
}

.paragraph-intro {
  margin-bottom: 24rpx;
}

.paragraph-intro text {
  font-size: 32rpx;
  color: #1d1d1f;
  line-height: 1.6;
  font-weight: 500;
}

.sub-paragraphs {
  margin-top: 16rpx;
}

.sub-paragraph {
  margin-bottom: 20rpx;
  padding-left: 32rpx;
}

.sub-paragraph text {
  font-size: 28rpx;
  color: #424245;
  line-height: 1.5;
}

.article-appendix {
  margin-top: 64rpx;
  padding-top: 32rpx;
  border-top: 2rpx solid #e5e5ea;
}

.appendix-title {
  font-size: 36rpx;
  font-weight: 700;
  color: #1d1d1f;
  margin-bottom: 32rpx;
}

.references-list {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.reference-item {
  background: #f5f5f7;
  border-radius: 12rpx;
  padding: 24rpx;
}

.reference-title {
  display: block;
  font-size: 28rpx;
  font-weight: 600;
  color: #1d1d1f;
  margin-bottom: 12rpx;
}

.reference-url {
  display: block;
  font-size: 24rpx;
  color: #007aff;
  word-break: break-all;
  text-decoration: underline;
  line-height: 1.6;
}

.copy-hint {
  display: inline-block;
  font-size: 20rpx;
  color: #86868b;
  margin-top: 8rpx;
  padding: 4rpx 12rpx;
  background: rgba(0, 122, 255, 0.1);
  border-radius: 8rpx;
}

.export-pdf-btn-small {
  padding: 16rpx 32rpx;
  background: #007aff;
  color: #ffffff;
  font-size: 24rpx;
  font-weight: 600;
  border: none;
  border-radius: 20rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 122, 255, 0.3);
  line-height: 1;
  position: relative;
  z-index: 20;
}

.export-pdf-btn-small::after {
  border: none;
  }
